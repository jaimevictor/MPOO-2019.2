<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".duende.gui.DuendeCadastro">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:contentDescription="@string/logotipo"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="10dp" />

    <TextView
        android:id="@+id/labelBemVindo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OlÃ¡, sinta-se bem vindo para cadastrar seu duende."
        android:textColor="#0A0404"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/nomeTextField"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        tools:layout_editor_absoluteX="4dp" />

    <TextView
        android:id="@+id/labelNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/nome"
        android:textColor="#0A0404"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/labelBemVindo"
        tools:layout_editor_absoluteX="6dp" />


    <EditText
        android:id="@+id/nomeTextField"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="124dp"
        android:ems="10"
        android:hint="@string/digite_seu_nome"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        tools:ignore="Autofill" />

    <TextView
        android:id="@+id/labelCpf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cpf"
        android:textColor="#0A0404"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/nomeTextField"
        tools:layout_editor_absoluteX="6dp" />

    <EditText
        android:id="@+id/cpfTextField"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="6dp"
        android:ems="10"
        android:hint="@string/digite_seu_cpf"
        android:inputType="number"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelCpf"
        tools:ignore="Autofill" />

    <TextView
        android:id="@+id/labelEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/e_mail"
        android:textColor="#050101"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/cpfTextField"
        tools:layout_editor_absoluteX="6dp" />

    <EditText
        android:id="@+id/emailTextField"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="6dp"
        android:ems="10"
        android:hint="@string/digite_seu_e_mail"
        android:inputType="textEmailAddress"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/labelEmail"
        tools:ignore="Autofill"
        tools:layout_editor_absoluteX="6dp" />

    <TextView
        android:id="@+id/labelAltura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Altura"
        android:textColor="#050101"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/emailTextField" />

    <EditText
        android:id="@+id/AlturaTextField"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="@string/digite_seu_e_mail"
        android:inputType="numberDecimal"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/labelAltura"
        tools:ignore="Autofill" />

    <TextView
        android:id="@+id/labelSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digite sua senha"
        android:textColor="#0F0000"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/AlturaTextField"
        tools:layout_editor_absoluteX="6dp" />

    <EditText
        android:id="@+id/senhaTextField"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="@string/digite_sua_senha"
        android:inputType="textPassword"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/labelSenha"
        tools:ignore="Autofill"
        tools:layout_editor_absoluteX="6dp" />

    <TextView
        android:id="@+id/labelConfirmaSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repita sua senha"
        android:textColor="#0F0000"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/senhaTextField"
        tools:layout_editor_absoluteX="6dp" />

    <EditText
        android:id="@+id/confirmarSenhaTextField"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="@string/confirma_senha"
        android:inputType="textPassword"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/labelConfirmaSenha"
        tools:ignore="Autofill"
        tools:layout_editor_absoluteX="6dp" />

    <Button
        android:id="@+id/botaoFinalizarCadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#AF0D25"
        android:text="@string/finalizar_cadastro"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmarSenhaTextField" />

</androidx.constraintlayout.widget.ConstraintLayout>